{
  "name": "@rinkkasatiainen/cfb-session-discovery-contracts",
  "version": "0.2.2",
  "type": "module",
  "description": "Session discovery module contracts for CFB. This is modified by BE, used by FE",
  "main": "./dist/index.js",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rinkkasatiainen/codefreeze-board.git"
  },
  "scripts": {
    "lint": "eslint -- src test",
    "lint:fix": "eslint --fix -- src test",
    "pretest": "cp -r ../fe-contracts/* be-responses/",
    "test": "mocha test/*.test.js test/**/*.test.js",
    "clean": "rm -rf dist",
    "build": "npm run clean && mkdir -p dist && cp index.js dist/ && cp -r src dist/ && cp package.json dist/",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "publish:github": "npm run build && npm publish --registry=https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@rinkkasatiainen/cfb-testing-utils": "^0.2.1",
    "@rinkkasatiainen/eslint-config.js": "^0.2.4",
    "@stylistic/eslint-plugin": "^5.1.0",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "eslint": "^9.26.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-mocha": "^11.0.0",
    "mocha": "^11.7.2",
    "path": "^0.12.7",
    "sinon": "^20.0.0",
    "sinon-chai": "^4.0.0"
  },
  "files": [
    "dist",
    "be-responses"
  ]
}
